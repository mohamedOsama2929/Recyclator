<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.recyclator.recyclator.CombanyOrUser">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/companyicon"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="189dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="180"
        android:layout_height="160"
        android:layout_marginEnd="8dp"
        android:background="@drawable/usericon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="189dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:lines="2"
        android:text="You are using Recyclator \n                  as a ?"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="129dp" />
</android.support.constraint.ConstraintLayout>
